---
import Heading from "../ui/Heading.astro";
import { Icon } from "astro-icon/components";
---

<section class="py-8 px-8 max-md:py-4 mb-4 scroll-m-16" id="education">
  <div class="flex flex-col pt-8 max-w-4xl mx-auto">
    <div class="flex gap-4 items-center justify-center">
      <Icon class="text-3xl dark:text-white text-blacktext" name="calendar" />
      <Heading text="Education" textGradient="Background" level={2} />
    </div>
    
    <div class="mt-8 space-y-6">
      <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-lg border border-gray-200 dark:border-gray-700">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
          <div>
            <h3 class="text-xl font-bold text-blacktext dark:text-white">Master of Computer Applications</h3>
            <p class="text-lg text-gray-600 dark:text-gray-300">[JSPM Narhe Technical Campus]</p>
          </div>
          <div class="text-right mt-2 md:mt-0">
            <span class="inline-block px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm font-medium">
               Graduation: June 2025
            </span>
          </div>
        </div>
        
        <div class="space-y-3">
          <div>
            <h4 class="font-semibold text-blacktext dark:text-white mb-2">Relevant Coursework</h4>
            <div class="flex flex-wrap gap-2">
              <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded text-sm">Data Structures</span>
              <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded text-sm">Algorithms</span>
              <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded text-sm">Web Development</span>
              <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded text-sm">Database Systems</span>
              <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded text-sm">Software Engineering</span>
            </div>
          </div>
          
          <div>
            <h4 class="font-semibold text-blacktext dark:text-white mb-2">Technical Skills</h4>
            <div class="flex flex-wrap gap-2">
              <span class="px-2 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded text-sm">Programming Languages</span>
              <span class="px-2 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded text-sm">Web Frameworks</span>
              <span class="px-2 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded text-sm">Database Management</span>
              <span class="px-2 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded text-sm">Version Control</span>
            </div>
          </div>
          
          <div>
            <h4 class="font-semibold text-blacktext dark:text-white mb-2">Academic Projects</h4>
            <p class="text-gray-600 dark:text-gray-300">
              Full-stack web applications, database design projects, algorithm implementations, and software development assignments demonstrating practical application of theoretical concepts.
            </p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="text-center mt-8">
      <p class="text-sm text-gray-500 dark:text-gray-400 italic">
        
      </p>
    </div>
  </div>
</section>

---
const techStack = {
  frontend: [
    "html",
    "javascript",
    "React",
    "css",
    "tailwind",
    "bootstrap",
    "astro",
  ],
  backend: [
    "python",
    "php",
    "django",
    "djangorest",
    "fastapi",
    "restapi",
    "node",
  ],
  database: [
    "mysql",
    "postgresql",
    "sqlite",
  ],
  tools: [
    "git",
    "figma",
    "vercel",
    "netlify",
    "markdown",
    "wordpress",
    "oop",
  ],
};

import Capsule from "../ui/Capsule.astro";

type ToolVariant = "default" | "center";

// Base classes that are common to all variants
const baseClasses = "flex flex-wrap gap-4 max-lg:gap-1 grid-auto-efe";

// Variant-specific classes
const variantClasses: Record<ToolVariant, string> = {
  default: "cursor-default",
  center: "justify-center cursor-default",
};

const { variant = "default", linkEnabled = false, size = "md" } = Astro.props;

// Combine base classes with variant-specific classes
const classes = `${baseClasses} ${variantClasses[variant as ToolVariant]}`;
---

<div class={classes}>
  <div class="w-full">
    <h3 class="text-lg font-semibold mb-3 dark:text-white text-blacktext">Frontend</h3>
    <div class="flex flex-wrap gap-2 mb-4">
      {techStack.frontend.map((tool) => <Capsule lang={tool} linkEnabled={linkEnabled} size={size} />)}
    </div>
  </div>
  
  <div class="w-full">
    <h3 class="text-lg font-semibold mb-3 dark:text-white text-blacktext">Backend</h3>
    <div class="flex flex-wrap gap-2 mb-4">
      {techStack.backend.map((tool) => <Capsule lang={tool} linkEnabled={linkEnabled} size={size} />)}
    </div>
  </div>
  
  <div class="w-full">
    <h3 class="text-lg font-semibold mb-3 dark:text-white text-blacktext">Database</h3>
    <div class="flex flex-wrap gap-2 mb-4">
      {techStack.database.map((tool) => <Capsule lang={tool} linkEnabled={linkEnabled} size={size} />)}
    </div>
  </div>
  
  <div class="w-full">
    <h3 class="text-lg font-semibold mb-3 dark:text-white text-blacktext">Tools</h3>
    <div class="flex flex-wrap gap-2">
      {techStack.tools.map((tool) => <Capsule lang={tool} linkEnabled={linkEnabled} size={size} />)}
    </div>
  </div>
</div>
